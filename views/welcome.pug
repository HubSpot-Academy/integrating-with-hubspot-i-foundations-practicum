doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
        link(rel="icon", type="image/x-icon" href="/favicon.ico")
    body    
        h1 Welcome!
        table(border='1')
            tr
                th Name
                th Model 
                th Top speed
            each scooter in scooters
                tr 
                    td #{scooter.properties.name}
                    td #{scooter.properties.model}
                    td #{scooter.properties.top_speed}