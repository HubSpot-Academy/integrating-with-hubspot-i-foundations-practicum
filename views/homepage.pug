doctype html
html(lang="en")
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")

    body
        .back-link 
            a(class="button" href="/updates") Add/Update this table

        .cards 
            each contact in data
                .card 
                    h2.card__name #{contact.properties.firstname}  #{contact.properties.lastname}
                    p.card__email #{contact.properties.email}
                    p.card__email #{contact.properties.bike_name}
                    p.card__id #{contact.id}