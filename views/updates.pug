doctype html
html 
    head 
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
    .container
    div 
        a(href='/') Return to the homepage
        .form-wrapper
           h3 Custom Object Form 
           form(role='form' method='POST' action=url)
              div
                label(for='name') Name:
                input(type='text', placeholder='Name' name='name')
              div
                 label(for='pirate_crew_name') Crew Name:
                 input(type='text', placeholder='Crew Name' name='pirate_crew_name')
              div
                 label(for='pirate_ship_name') Ship Name:
                 input(type='text', placeholder='Ship Name' name='pirate_ship_name')
              div
                 input(type="submit", name="submit")