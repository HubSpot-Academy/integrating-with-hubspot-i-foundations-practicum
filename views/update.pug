doctype html
html(lang="en")
    head
        title Update Game Rating
        link(rel="stylesheet", href="/css/style.css")
    body
        .form-wrapper
            p Game: #{game}
            p Publisher: #{publisher}
            p Rating: #{rating}
            form(method="POST")
                label(for="newVal") Updated Rating
                input(type="number" name="newVal" required)
                input(type="submit" value="Submit")